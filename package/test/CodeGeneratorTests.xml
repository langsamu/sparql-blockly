<tests>
  <test name="String with apostrophe">
    <sparql>"'"</sparql>
    <xml>
      <block type="sparql11_string">
        <field name="value">'</field>
      </block>
    </xml>
  </test>
  <test name="String with quote">
    <xml>
      <block type="sparql11_string">
        <field name="value">'"</field>
      </block>
    </xml>
    <sparql>"'\""</sparql>
  </test>
  <test name="String with multiple lines">
    <xml>
      <block type="sparql11_string">
        <field name="value">line1
line2</field>
      </block>
    </xml>
    <sparql>'''line1
line2'''</sparql>
  </test>
  <test name="IRI reference empty">
    <xml>
      <block type="sparql11_irirefdefault"/>
    </xml>
    <sparql>&lt;&gt;</sparql>
  </test>
  <test name="IRI reference">
    <xml>
      <block type="sparql11_iriref">
        <field name="value">x</field>
      </block>
    </xml>
    <sparql>&lt;x&gt;</sparql>
  </test>
  <test name="Prefixed name">
    <xml>
      <block type="sparql11_prefixedname"/>
    </xml>
    <sparql>:</sparql>
  </test>
  <test name="Prefixed name with prefix">
    <xml>
      <block type="sparql11_prefixednameprefix">
        <field name="prefix">prefix</field>
      </block>
    </xml>
    <sparql>prefix:</sparql>
  </test>
  <test name="Prefixed name with local-name">
    <xml>
      <block type="sparql11_prefixednamelocalname">
        <field name="localName">localName</field>
      </block>
    </xml>
    <sparql>:localName</sparql>
  </test>
  <test name="Prefixed name with prefix and local-name">
    <xml>
      <block type="sparql11_prefixednameprefixlocalname">
        <field name="prefix">prefix</field>
        <field name="localName">localName</field>
      </block>
    </xml>
    <sparql>prefix:localName</sparql>
  </test>
  <test name="Language-tagged string">
    <xml>
      <block type="sparql11_langstring">
        <value name="value">
          <block type="sparql11_string">
            <field name="value">x</field>
          </block>
        </value>
        <field name="language">en</field>
      </block>
    </xml>
    <sparql>'x'@en</sparql>
  </test>
  <test name="Describe">
    <xml>
      <block type="sparql11_query">
        <value name="value">
          <block type="sparql11_describequery">
            <value name="subject">
              <block type="sparql11_varoririitem">
                <value name="value">
                  <block type="sparql11_var1">
                    <field name="value">s</field>
                  </block>
                </value>
                <next>
                  <block type="sparql11_varoririitem">
                    <value name="value">
                      <block type="sparql11_iriref">
                        <field name="value">http://example.com/</field>
                      </block>
                    </value>
                  </block>
                </next>
              </block>
            </value>
            <value name="where">
              <block type="sparql11_querycommon">
                <value name="pattern">
                  <block type="sparql11_groupgraphpattern">
                    <value name="value">
                      <block type="sparql11_triplessamesubject">
                        <value name="subject">
                          <block type="sparql11_var1">
                            <field name="value">s</field>
                          </block>
                        </value>
                        <statement name="predicates">
                          <block type="sparql11_propertylistnotempty">
                            <value name="predicate">
                              <block type="sparql11_var1">
                                <field name="value">p</field>
                              </block>
                            </value>
                            <statement name="objects">
                              <block type="sparql11_objectlistitem">
                                <value name="value">
                                  <block type="sparql11_var1">
                                    <field name="value">o</field>
                                  </block>
                                </value>
                              </block>
                            </statement>
                          </block>
                        </statement>
                      </block>
                    </value>
                  </block>
                </value>
              </block>
            </value>
          </block>
        </value>
      </block>
    </xml>
    <sparql><![CDATA[DESCRIBE ?s <http://example.com/>
WHERE {
	?s ?p ?o
}]]></sparql>
  </test>
</tests>

